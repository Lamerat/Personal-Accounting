{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "always"],
        "no-multiple-empty-lines": ["error", { "max": 2 }],
        "quotes": [2, "single", { "avoidEscape": true, "allowTemplateLiterals": true }]
    }
}